@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Insure - Sign Up</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="keywords" />
    <meta content="" name="description" />

    <!-- Favicon -->
    <link rel='shortcut icon' type='image/x-icon' href="~/assets/img/mainlogo.jpg" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&family=Poppins:wght@600;700&display=swap"
          rel="stylesheet" />

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Libraries Stylesheet -->
    <link href="~/assets/lib/animate/animate.min.css" rel="stylesheet" />
    <link href="~/assets/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Template Stylesheet -->
    <link href="~/assets/css/style.css" rel="stylesheet" />
</head>

<body>

    <!-- Spinner Start -->
    <div id="spinner"
         class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->

    <!-- Page Header Start -->
    <div class="container-fluid page-header py-5 mb-2 wow fadeIn"
         data-wow-delay="0.1s">
        <div class="container py-5">
            <h1 class="display-4 animated slideInDown mb-4">Sign Up</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Userpanel")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("userlogin","Userpanel")">Sign In</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Sign Up</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Page Header End -->


    <div class="container mt-5 mb-5 w-100 d-flex align-items-center justify-content-center">
        <div class="row">
            <div class="col-lg-6 d-flex align-items-center justify-content-center">
                <img width="100%" src="~/assets/img/signup.jpg" alt="">
            </div>
            <div class="col-lg-6 d-flex align-items-center justify-content-center mt-5">
                <form method="post" enctype="multipart/form-data" class="form-div">

                    <div class="row g-3 justify-content-center">
                        <div class="col-10">
                            <h2>
                                Create Your Account

                            </h2>
                        </div>
                        <div class="col-10">
                            Welcome! Please enter your details.
                        </div>
                        <div class="col-5">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="subject" placeholder="Subject" name="user_firstname" required />
                                <label for="subject">First Name</label>
                            </div>
                        </div>
                        <div class="col-5">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="subject" placeholder="Subject" name="user_lastname" required />
                                <label for="subject">Last Name</label>
                            </div>
                        </div>
                        <div class="col-5">
                            <div class="form-floating">
                                <input type="email" class="form-control" id="subject" placeholder="Subject" name="user_email" required />
                                <label for="subject">Email</label>
                            </div>
                        </div>
                        <div class="col-5">
                            <div class="form-floating">
                                <input type="password" class="form-control" id="subject" placeholder="Subject" name="user_password" required />
                                <label for="subject">Password</label>
                            </div>
                        </div>
                        <div class="col-5">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="subject" placeholder="Subject" name="user_cnic" required />
                                <label for="subject">Cnic</label>
                            </div>
                        </div>
                        <div class="col-5">
                            <div class="form-floating">
                                <input type="date" class="form-control" id="subject" placeholder="Subject" name="user_dateofbirth" required />
                                <label for="subject">Date of birth</label>
                            </div>
                        </div>
                        <div class="col-5">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="subject" placeholder="Subject" name="user_phone" required />
                                <label for="subject">Phone</label>
                            </div>
                        </div>
                        <div class="col-5">
                            <div class="form-floating">
                                <input type="file" class="form-control" id="subject" placeholder="Subject" name="user_image" required />
                                <label for="subject">Upload image</label>
                            </div>
                        </div>
                        <div class="col-10">
                            <div class="form-floating">
                                <textarea class="form-control" id="subject" name="user_address" required style="height: 75px"></textarea>
                                <label for="subject">Address</label>
                            </div>
                        </div>
                        <div class="col-10 text-center">
                            <input type="submit" class="btn btn-primary w-100 py-3 px-5" value="SIGN UP">
                        </div>
                        <div class="col-10 mb-lg-0 mb-4 text-center">
                            Already have an account? <a href="@Url.Action("userlogin","Userpanel")">Sign In</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>



    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/lib/wow/wow.min.js"></script>
    <script src="~/assets/lib/easing/easing.min.js"></script>
    <script src="~/assets/lib/waypoints/waypoints.min.js"></script>
    <script src="~/assets/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/assets/lib/counterup/counterup.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/assets/js/main.js"></script>
</body>

</html>