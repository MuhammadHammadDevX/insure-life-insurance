
@{
    ViewData["Title"] = "allnews";
    Layout = "~/Views/Shared/userpanel.cshtml";
}

@model List<News>

<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn"
     data-wow-delay="0.1s">
    <div class="container py-5">
        <h1 class="display-4 animated slideInDown mb-4">Insurance Updates</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Userpanel")">Home</a></li>
                <li class="breadcrumb-item"><a>Customer Support</a></li>
                <li class="breadcrumb-item active" aria-current="page">Insurance Updates</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto" style="max-width: 500px">
            <h1 class="display-6 mb-5">
                Updates & Announcements
            </h1>
        </div>

        <div class="row g-4 justify-content-center">
            @foreach (var news in Model)
            {
                <div class="col-lg-6 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="service-item rounded h-100 p-5">
                        <h4 class="mb-4 text-primary">@news.news_title</h4>
                        <p class="mb-4">
                            @news.news_description
                        </p>
                    </div>
                </div>
            }
        </div>

    </div>

</div>




