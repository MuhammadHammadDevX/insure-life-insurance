
@{
    ViewData["Title"] = "settinguser";
    Layout = "~/Views/Shared/userpanel.cshtml";
}

@model List<User>

<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn"
     data-wow-delay="0.1s">
    <div class="container py-5">
        <h1 class="display-4 animated slideInDown mb-4">User Details</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Userpanel")">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Profile</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                    Settings
                </li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<div class="container">
    <div class="row g-4">
        <h2 class="title-step mb-5 text-center" style="font-size: 36px; font-weight: 600; color: #333; text-transform: uppercase; letter-spacing: 2px; margin-bottom: 30px;">USER DETAILS</h2>

        <!-- First/LAST NAME -->
        <div class="col-lg-3 col-md-6 col-sm-12 wow fadeInUp" data-wow-delay="0.1s">
            <div class="user-detail-card" style="background-color: #fff; padding: 20px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); margin-bottom: 20px;">
                <h5 class="card-title" style="font-size: 18px; font-weight: 600; color: #007bff; margin-bottom: 10px;">FIRST/LAST NAME</h5>
                <p class="card-text" style="font-size: 16px; font-weight: 500; color: #555;">@Model[0].user_firstname @Model[0].user_lastname</p>
            </div>
        </div>

        <!-- EMAIL ADDRESS -->
        <div class="col-lg-3 col-md-6 col-sm-12 wow fadeInUp" data-wow-delay="0.2s">
            <div class="user-detail-card" style="background-color: #fff; padding: 20px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); margin-bottom: 20px;">
                <h5 class="card-title" style="font-size: 18px; font-weight: 600; color: #007bff; margin-bottom: 10px;">EMAIL ADDRESS</h5>
                <p class="card-text" style="font-size: 16px; font-weight: 500; color: #555;">@Model[0].user_email</p>
            </div>
        </div>

        <!-- PASSWORD -->
        <div class="col-lg-3 col-md-6 col-sm-12 wow fadeInUp" data-wow-delay="0.3s">
            <div class="user-detail-card" style="background-color: #fff; padding: 20px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); margin-bottom: 20px;">
                <h5 class="card-title" style="font-size: 18px; font-weight: 600; color: #007bff; margin-bottom: 10px;">PASSWORD</h5>
                <p class="card-text" style="font-size: 16px; font-weight: 500; color: #555;">@Model[0].user_password</p>
            </div>
        </div>

        <!-- CNIC -->
        <div class="col-lg-3 col-md-6 col-sm-12 wow fadeInUp" data-wow-delay="0.4s">
            <div class="user-detail-card" style="background-color: #fff; padding: 20px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); margin-bottom: 20px;">
                <h5 class="card-title" style="font-size: 18px; font-weight: 600; color: #007bff; margin-bottom: 10px;">CNIC</h5>
                <p class="card-text" style="font-size: 16px; font-weight: 500; color: #555;">@Model[0].user_cnic</p>
            </div>
        </div>

        <!-- DATE OF BIRTH -->
        <div class="col-lg-3 col-md-6 col-sm-12 wow fadeInUp" data-wow-delay="0.5s">
            <div class="user-detail-card" style="background-color: #fff; padding: 20px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); margin-bottom: 20px;">
                <h5 class="card-title" style="font-size: 18px; font-weight: 600; color: #007bff; margin-bottom: 10px;">DATE OF BIRTH</h5>
                <p class="card-text" style="font-size: 16px; font-weight: 500; color: #555;">@Model[0].user_dateofbirth</p>
            </div>
        </div>

        <!-- MOBILE NUMBER -->
        <div class="col-lg-3 col-md-6 col-sm-12 wow fadeInUp" data-wow-delay="0.6s">
            <div class="user-detail-card" style="background-color: #fff; padding: 20px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); margin-bottom: 20px;">
                <h5 class="card-title" style="font-size: 18px; font-weight: 600; color: #007bff; margin-bottom: 10px;">MOBILE NUMBER</h5>
                <p class="card-text" style="font-size: 16px; font-weight: 500; color: #555;">@Model[0].user_phone</p>
            </div>
        </div>

        <!-- ADDRESS -->
        <div class="col-lg-3 col-md-6 col-sm-12 wow fadeInUp" data-wow-delay="0.7s">
            <div class="user-detail-card" style="background-color: #fff; padding: 20px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); margin-bottom: 20px;">
                <h5 class="card-title" style="font-size: 18px; font-weight: 600; color: #007bff; margin-bottom: 10px;">ADDRESS</h5>
                <p class="card-text" style="font-size: 16px; font-weight: 500; color: #555;">@Model[0].user_address</p>
            </div>
        </div>

        <!-- PROFILE IMAGE -->
        <div class="col-lg-3 col-md-6 col-sm-12 wow fadeInUp" data-wow-delay="0.8s">
            <div class="user-detail-card" style="background-color: #fff; padding: 20px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); margin-bottom: 20px;">
                <h5 class="card-title" style="font-size: 18px; font-weight: 600; color: #007bff; margin-bottom: 10px;">PROFILE IMAGE</h5>
                <p><img src="@("~/user_images/"+@Model[0].user_image)" class="profile-image" asp-append-version="true" style="width: 50px; height: 50px; border-radius: 50%; object-fit: cover; border: 2px solid #ddd;" /></p>
            </div>
        </div>

        <!-- UPDATE BUTTON -->
        <div class="col-12 text-center wow fadeInUp" data-wow-delay="0.9s">
            <a class="btn btn-primary" href="@Url.Action("update", "Userpanel", new { id = @Model[0].user_id })" style="background-color: #007bff; border-color: #007bff; padding: 12px 30px; font-size: 18px; border-radius: 5px; text-transform: uppercase; text-decoration: none; color: #fff;">Update</a>
        </div>
    </div>
</div>
